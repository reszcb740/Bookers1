

<h1>Bookrer</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>

<% @books.each do |book| %>

    <tr>
      <td><%=  book.title =%></td>
      <td><%=  book.body =%></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
<% end %>
  </tbody>
</table>

<h2>New book</h1>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>